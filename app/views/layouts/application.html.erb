<!DOCTYPE html>
<html>
<head>

  <title>Flixter</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
</head>

<body>
  <nav class="navbar navbar-expand-md bg-dark navbar-inverse">
    <!-- Brand -->
    <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>

    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        <li class="nav-item">
          <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
        </li>
      </ul>

      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li> 
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
          </li>
      </ul>
      <% end %>
    </div> 
  </nav>

  <% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <%= yield %>
</div>

<div id="footer">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-3">
        <b>Teachers</b>
        <br/>
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        <%= link_to 'https://github.com/srachal674' do %>
          <span class="fab fa-github-square fa-2x social-button"></span>
        <% end %>
        <%= link_to 'https://www.facebook.com/shannonlrachal' do %>      
          <span class="fab fa-facebook-square fa-2x social-button"></span>
        <% end %>
        <%= link_to 'https://twitter.com/srachal74' do %>
          <span class="fab fa-twitter-square fa-2x social-button"></span>
        <% end %>  
      </div>
    </div>
  </div>    
</div>
    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</body>
</html>