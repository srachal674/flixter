<!DOCTYPE html>
<html>
<head>

  <title>Flixter</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-expand-md bg-dark navbar-inverse">
    <!-- Brand -->
    <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>

    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        <li class="nav-item active navbar-text navbar-right">
          <%#<a class="nav-link" href="#">Sign in <span class="sr-only">(current)</span></a>%>
        </li>
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li> 
        <% else %>
        <li class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
        </li>
      </ul>
      <% end %>
    </div> 
  </nav>

  <% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <%= yield %>
</div>

<div id="footer">
  <div class="container">
    <b>Teachers</b>
    <br/>
    <%= link_to 'Teach a Course', new_instructor_course_path %>
  </div>
</div>

</body>
</html>